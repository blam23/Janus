<Window x:Class="Janus.DelayDisplay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Janus"
        AllowsTransparency="True"
        mc:Ignorable="d" Height="41.336" Width="192.06" ResizeMode="NoResize" ShowInTaskbar="False" WindowStyle="None" Background="#FF272727" Topmost="True">
    <Grid>
        <Image Height="41" VerticalAlignment="Top" Source="Media/Janus.ico" Opacity="0.1" HorizontalAlignment="Right" Width="52"/>

        <ProgressBar x:Name="pbProgress" Height="13" VerticalAlignment="Bottom" Background="#FF464646" BorderBrush="{x:Null}" Foreground="#FF00E8FF"/>
        <Label Content="Waiting to process files.." HorizontalAlignment="Left" VerticalAlignment="Top" Width="138" Background="{x:Null}" Foreground="White" Margin="0,2,0,0"/>
        <Label x:Name="lblFileCount" Content="(0)" FontSize="14" FontFamily="Consolas" Foreground="White" Margin="0,2,0,13" HorizontalAlignment="Right" Width="34"/>
    </Grid>
</Window>
